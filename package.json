{
  "name": "moominsay",
  "version": "0.0.2",
  "description": "A cowsay with Moomins",
  "author": "chocolateofpain <chocolateofpain@gmail.com>",
  "scripts": {
    "dev": "ts-node src/cli.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:write": "eslint --fix src/**/*.ts",
    "prepare": "npx simple-git-hooks"
  },
  "bin": {
    "moominsay": "/build/cli.js",
    "moominthink": "/build/cli.js"
  },
  "dependencies": {
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@types/yargs": "^17.0.22",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.4",
    "simple-git-hooks": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix"
    ]
  }
}
